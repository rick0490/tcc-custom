[Unit]
Description=TCC Custom - Tournament Signup PWA
Documentation=https://github.com/rick0490/tcc-custom
After=network.target match-display.service

[Service]
Type=simple
User=root
WorkingDirectory=/root/tcc-custom/tournament-signup
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
