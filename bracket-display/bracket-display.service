[Unit]
Description=Bracket Display Service
Documentation=https://github.com/tcc-custom
After=network.target control-center-admin.service
Wants=control-center-admin.service

[Service]
Type=simple
User=root
WorkingDirectory=/root/tcc-custom/bracket-display
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=bracket-display

# Environment
Environment=NODE_ENV=production
Environment=PORT=2053

# Process limits
LimitNOFILE=65535

# Hardening
NoNewPrivileges=true
ProtectSystem=strict
ReadWritePaths=/root/tcc-custom/bracket-display

[Install]
WantedBy=multi-user.target
