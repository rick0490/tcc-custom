[Unit]
Description=Flyer Display Service
Documentation=https://github.com/tcc-custom
After=network.target control-center-admin.service
Wants=control-center-admin.service

[Service]
Type=simple
User=root
WorkingDirectory=/root/tcc-custom/flyer-display
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=flyer-display

# Environment
Environment=NODE_ENV=production
Environment=PORT=2054

# Process limits
LimitNOFILE=65535

# Hardening
NoNewPrivileges=true
ProtectSystem=strict
ReadWritePaths=/root/tcc-custom/flyer-display

[Install]
WantedBy=multi-user.target
