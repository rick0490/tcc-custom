<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Match Display</title>

    <!-- Prevent caching -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Oswald:wght@500;600;700&family=JetBrains+Mono:wght@500;700&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="/css/match-display.css?v=<%= Date.now() %>">

    <!-- Fullscreen styling -->
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background: #000000;
        }

        /* Loading screen */
        .loading-screen {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #000000;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 99999;
            color: #ffffff;
            font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        }

        .loading-screen.hidden {
            display: none;
        }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid #333333;
            border-top-color: #ff2e2e;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .loading-text {
            font-size: 24px;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 10px;
        }

        .loading-status {
            font-size: 14px;
            color: #888888;
        }

        /* Error screen */
        .error-screen {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #000000;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 99999;
            color: #ffffff;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
        }

        .error-screen.hidden {
            display: none;
        }

        .error-icon {
            font-size: 64px;
            margin-bottom: 20px;
        }

        .error-title {
            font-size: 28px;
            font-weight: 700;
            color: #ff2e2e;
            margin-bottom: 15px;
        }

        .error-message {
            font-size: 18px;
            color: #888888;
            text-align: center;
            max-width: 600px;
            line-height: 1.5;
        }

        .retry-btn {
            margin-top: 30px;
            padding: 15px 40px;
            background: #ff2e2e;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }

        .retry-btn:hover {
            background: #cc2424;
        }

        /* No tournament placeholder */
        .no-tournament {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            color: #666666;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
        }

        .no-tournament-icon {
            font-size: 80px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .no-tournament-text {
            font-size: 36px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        .no-tournament-subtext {
            font-size: 18px;
            margin-top: 10px;
            opacity: 0.7;
        }
    </style>
</head>
<body data-user-id="<%= userId %>" data-admin-ws-url="<%= adminWsUrl %>" data-debug-mode="<%= debugMode %>">

    <!-- Loading Screen -->
    <div id="loading-screen" class="loading-screen">
        <div class="loading-spinner"></div>
        <div class="loading-text">Match Display</div>
        <div id="loading-status" class="loading-status">Connecting...</div>
    </div>

    <!-- Error Screen -->
    <div id="error-screen" class="error-screen hidden">
        <div class="error-icon">!</div>
        <div class="error-title">Connection Error</div>
        <div class="error-message">Unable to connect to the server.</div>
        <button id="retry-btn" class="retry-btn" onclick="location.reload()">Retry</button>
    </div>

    <!-- Main Match Display Container -->
    <div id="match-display" class="tourney-dashboard">
        <!-- Content will be injected by JavaScript -->
    </div>

    <!-- Overlay Containers (managed by overlay-manager.js) -->
    <div id="ticker-container"></div>
    <div id="timer-container"></div>
    <div id="qr-container"></div>
    <div id="sponsor-container"></div>

    <!-- Emergency Mode Overlay -->
    <div id="emergency-overlay" class="emergency-overlay">
        <div class="emergency-icon">!</div>
        <div class="emergency-title">Technical Difficulties</div>
        <div class="emergency-message">We are experiencing technical issues. Please stand by.</div>
        <div id="emergency-timestamp" class="emergency-timestamp"></div>
    </div>

    <!-- Socket.IO from CDN -->
    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>

    <!-- JavaScript Modules -->
    <script src="/js/websocket-client.js?v=<%= Date.now() %>"></script>
    <script src="/js/timer-manager.js?v=<%= Date.now() %>"></script>
    <script src="/js/overlay-manager.js?v=<%= Date.now() %>"></script>
    <script src="/js/podium-display.js?v=<%= Date.now() %>"></script>
    <script src="/js/match-display.js?v=<%= Date.now() %>"></script>

    <!-- Initialize Display -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userId = document.body.dataset.userId;
            const adminWsUrl = document.body.dataset.adminWsUrl;
            const debugMode = document.body.dataset.debugMode === 'true';

            // Create global match display instance
            window.matchDisplay = new MatchDisplay({
                userId: userId,
                adminWsUrl: adminWsUrl,
                debugMode: debugMode
            });
        });
    </script>
</body>
</html>
